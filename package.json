{
  "devDependencies": {
    "husky": "v4",
    "lint-staged": "^10.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "frontend/**/*.js": [
      "yarn pre-commit:frontend"
    ], 
    "backend/**/*.js": [
      "yarn pre-commit:backend"
    ]
  },
  "scripts": {
    "pre-commit:frontend": "cd frontend && yarn pre-commit",
    "pre-commit:backend": "cd backend && yarn pre-commit"
  }
}
