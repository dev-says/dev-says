{
    "root": true,
    "plugins": [
        "react",
        "prettier"
    ],
    "extends": [
        "prettier",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version":"detect"
        }
    },
    "rules": {
        "semi": ["error","always"],
        "quotes" : ["error", "single"],
        "prettier/prettier": "error"
    }
}